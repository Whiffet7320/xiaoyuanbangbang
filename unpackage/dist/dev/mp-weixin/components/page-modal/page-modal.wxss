.modal-box {
  position: fixed;
  left: 50%;
  top: 50%;
  margin: auto;
  background: #fff;
  z-index: 9999998;
  transition: all 0.3s ease-in-out;
  opacity: 0;
  box-sizing: border-box;
  visibility: hidden;
}
.modal-scale {
  -webkit-transform: translate(-50%, -50%) scale(0);
          transform: translate(-50%, -50%) scale(0);
}
.modal-normal {
  -webkit-transform: translate(-50%, -50%) scale(1);
          transform: translate(-50%, -50%) scale(1);
}
.modal-show {
  opacity: 1;
  visibility: visible;
}
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 99999;
  transition: all 0.3s ease-in-out;
  opacity: 0;
  visibility: hidden;
}
.mask-show {
  visibility: visible;
  opacity: 1;
}
