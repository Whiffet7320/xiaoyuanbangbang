page {
  width: 100%;
  height: 100%;
  background: #f7f8fa;
}
.index {
  width: 100%;
}
.index .Coupon {
  width: 702rpx;
  height: 200rpx;
  margin: 20rpx auto 0;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  position: relative;
}
.index .Coupon .Tips {
  position: absolute;
  margin-left: 10rpx;
  top: 0;
  width: 86rpx;
  height: 28rpx;
  background-color: #FE694F;
  border-radius: 0 0 10rpx 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 500;
  color: #ffffff;
}
.index .Coupon .OneInfo {
  margin: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.index .Coupon .OneInfo .whole {
  display: flex;
  align-items: center;
}
.index .Coupon .OneInfo .whole .StorePic {
  display: flex;
  align-items: center;
}
.index .Coupon .OneInfo .whole .StorePic image {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
}
.index .Coupon .OneInfo .whole .StoreName {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.index .Coupon .OneInfo .whole .StoreName .Name {
  font-size: 28rpx;
  font-weight: 500;
  color: #000000;
}
.index .Coupon .OneInfo .whole .StoreName .Time {
  margin-top: 8rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #848484;
}
.index .Coupon .OneInfo .PriTips {
  display: flex;
  flex-direction: column;
}
.index .Coupon .OneInfo .PriTips .Price {
  display: flex;
  align-items: center;
}
.index .Coupon .OneInfo .PriTips .Price .Staus {
  font-size: 36rpx;
  font-weight: 700;
  color: #d81e1e;
}
.index .Coupon .OneInfo .PriTips .Price .Test {
  font-size: 20rpx;
  font-weight: 500;
  color: #d81e1e;
}
.index .Coupon .OneInfo .PriTips .Reduce {
  font-size: 20rpx;
  font-weight: 400;
  color: #848484;
}
.index .Coupon .TestTips {
  margin: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.index .Coupon .TestTips .Limit {
  font-size: 20rpx;
  font-weight: 400;
  color: #848484;
}
.index .Coupon .TestTips .Gouse {
  width: 124rpx;
  height: 40rpx;
  background: #fe694f;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 400;
  color: #ffffff;
}

