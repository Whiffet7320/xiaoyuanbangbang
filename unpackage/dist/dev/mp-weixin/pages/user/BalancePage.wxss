page {
  height: 100%;
  background-color: #F7F8FA;
}
.index {
  width: 100%;
  height: 100%;
}
.index .YueExh {
  width: 710rpx;
  height: 228rpx;
  margin: 20rpx auto 24rpx;
  border-radius: 10rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.index .YueExh .Pic {
  position: absolute;
  left: 0;
  right: 0;
  z-index: -1;
  margin: 0 auto;
}
.index .YueExh .Pic image {
  width: 710rpx;
  height: 228rpx;
}
.index .YueExh .OneTest {
  margin-left: 40rpx;
  display: flex;
  align-items: center;
}
.index .YueExh .OneTest .Test {
  font-size: 24rpx;
  font-weight: 500;
  color: #ffffff;
}
.index .YueExh .OneTest .icon {
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}
.index .YueExh .OneTest .icon image {
  width: 32rpx;
  height: 22rpx;
}
.index .YueExh .Price {
  margin-left: 40rpx;
  font-size: 52rpx;
  font-weight: 700;
  color: #ffffff;
}
.index .Head {
  height: 56rpx;
  display: flex;
  align-items: center;
  margin: 0 20rpx;
  justify-content: space-between;
}
.index .Head .Tips {
  margin-left: 20rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: #141313;
}
.index .Head .Title {
  width: 400rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.index .Head .Title .List {
  font-size: 30rpx;
  font-weight: 400;
  color: #848484;
  border-bottom: 2rpx solid transparent;
}
.index .Head .Title .ListCor {
  height: 52rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: #fe694f;
  border-bottom: 2rpx solid #fe694f;
}
.index .allList {
  width: 702rpx;
  margin: 20rpx auto;
  background: #ffffff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.index .allList .Title {
  width: 672rpx;
  height: 80rpx;
  border-bottom: 2rpx solid #f8f8f8;
  display: flex;
  align-items: center;
  margin-left: 31rpx;
}
.index .allList .reward {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 31rpx;
  width: 672rpx;
  height: 116rpx;
  border-bottom: 2rpx solid #f8f8f8;
}
.index .allList .reward .Tous {
  display: flex;
  flex-direction: column;
}
.index .allList .reward .Tous .test {
  font-size: 28rpx;
  font-weight: 500;
  color: #000000;
}
.index .allList .reward .Tous .Time {
  font-size: 20rpx;
  font-weight: 400;
  color: #848484;
}
.index .allList .reward .Price {
  margin-right: 38rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #fe694f;
}

